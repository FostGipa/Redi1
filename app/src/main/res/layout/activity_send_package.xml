<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SendPackageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Send a package"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="#A7A7A7"
                        android:textSize="17sp"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/sendPackageBackButton"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/ic_arrow_left"
                        android:backgroundTint="#0560FA"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_origin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Origin Details"
                        android:textColor="#3A3A3A"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Address"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="State,Country"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Phone number"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Others"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_destination"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Destination Details"
                        android:textColor="#3A3A3A"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="16sp"/>
                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Address"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="State,Country"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Phone number"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Others"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Add destination"
                        android:textColor="#A7A7A7"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="13sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Package Details"
                    android:textColor="#3A3A3A"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="package items"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Weight of item(kg)"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:hint="Worth of Items"
                    android:paddingVertical="8dp"
                    android:textColorHint="#CFCFCF"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/send_package_edittext"
                    android:elevation="@dimen/cardview_default_elevation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Select delivery type"
                    android:textColor="#3A3A3A"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:id="@+id/sendPackageInstantButton"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingVertical="10dp"
                            android:gravity="center_horizontal"
                            android:background="@drawable/sign_custom_button"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_clock"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Instant delivery"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:fontFamily="@font/roboto_medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="5dp"
                        android:elevation="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingVertical="10dp"
                            android:gravity="center_horizontal"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_calendar"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Scheduled delivery"
                                android:textColor="#A7A7A7"
                                android:textSize="15sp"
                                android:fontFamily="@font/roboto_medium"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>