<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SendPackage2Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="Send a package"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#A7A7A7"
                android:textSize="17sp"/>

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/sendPackageBackButton"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_arrow_left"
                android:backgroundTint="#0560FA"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Information"
            android:textColor="#0560FA"
            android:fontFamily="@font/roboto_medium"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Origin details"
            android:textSize="13sp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mbaraugba, Ovom Amaa Asaa, Abia state"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+234 56543 96854"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Destination details"
            android:textSize="13sp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1. 19 Ademola Alabi close, lagos "
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+234 70644 80655"
            android:textColor="#A7A7A7"
            android:fontFamily="@font/roboto_regular"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Other details"
            android:textSize="13sp"
            android:textColor="#3A3A3A"
            android:fontFamily="@font/roboto_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Package Items"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="Books ans stationary, Garri Ngwa"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Weight of items"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="1000kg"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Worth of Items"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="N50,000"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Tracking Number"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="R-7458-4567-4434-5854"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            app:dividerColor="#A7A7A7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Charges"
            android:textColor="#0560FA"
            android:fontFamily="@font/roboto_medium"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Delivery Charges"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="N2,500.00"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Instant delivery"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="N300.00"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Tax and Service Charges"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="N200.00"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            app:dividerColor="#A7A7A7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Package total"
                android:textSize="13sp"
                android:textColor="#A7A7A7"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:layout_weight="0.6"
                android:maxLines="1"
                android:text="N3000.00"
                android:textSize="13sp"
                android:textColor="#EC8000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/send_package_buttons"
                android:layout_marginEnd="10dp"
                android:text="Edit package"
                android:textColor="#0560FA"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/makePaymentClickButton"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/send_package_buttons"
                android:backgroundTint="#0560FA"
                android:text="Make payment"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:fontFamily="@font/roboto_bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>